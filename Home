    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Canvas setup
            const canvas = new fabric.Canvas('image-canvas', {
                backgroundColor: null,
                preserveObjectStacking: true
            });
            
            // DOM elements
            const fileInput = document.getElementById('file-input');
            const uploadArea = document.getElementById('upload-area');
            const removeBgBtn = document.getElementById('remove-bg-btn');
            const resetBtn = document.getElementById('reset-btn');
            const cropBtn = document.getElementById('crop-btn');
            const outlineBtn = document.getElementById('outline-btn');
            const rotateBtn = document.getElementById('rotate-btn');
            const flipHBtn = document.getElementById('flip-h-btn');
            const flipVBtn = document.getElementById('flip-v-btn');
            const downloadPngBtn = document.getElementById('download-png-btn');
            const downloadWebpBtn = document.getElementById('download-webp-btn');
            const savePackBtn = document.getElementById('save-pack-btn');
            const exportWhatsappBtn = document.getElementById('export-whatsapp-btn');
            const exportTelegramBtn = document.getElementById('export-telegram-btn');
            const previewSticker = document.getElementById('preview-sticker');
            const loadingIndicator = document.getElementById('loading-indicator');
            const outlineWidthSlider = document.getElementById('outline-width');
            const outlineWidthValue = document.getElementById('outline-width-value');
            const outlineColorPicker = document.getElementById('outline-color');
            const bgSuggestions = document.getElementById('bg-suggestions');
            
            // State variables
            let originalImage = null;
            let currentImage = null;
            let isCropping = false;
            let cropRect = null;
            let outlineAdded = false;
            let net = null;
            
            // Initialize TensorFlow.js model
            async function loadBodyPixModel() {
                showLoading(true, "Loading AI model...");
                try {
                    net = await bodyPix.load({
                        architecture: 'MobileNetV1',
                        outputStride: 16,
                        multiplier: 0.75,
                        quantBytes: 2
                    });
                    console.log("BodyPix model loaded successfully");
                    showLoading(false);
                } catch (error) {
                    console.error("Error loading BodyPix model:", error);
                    showLoading(false);
                    alert("Failed to load background remover. Some features may not work.");
                }
            }
            
            // Load model when page loads
            loadBodyPixModel();
            
            // Event listeners
            uploadArea.addEventListener('click', () => fileInput.click());
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = '#f0f4ff';
            });
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.style.backgroundColor = '';
            });
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = '';
                if (e.dataTransfer.files.length) {
                    fileInput.files = e.dataTransfer.files;
                    handleFileUpload(e.dataTransfer.files[0]);
                }
            });
            
            fileInput.addEventListener('change', () => {
                if (fileInput.files.length) {
                    handleFileUpload(fileInput.files[0]);
                }
            });
            
            removeBgBtn.addEventListener('click', removeBackground);
            resetBtn.addEventListener('click', resetImage);
            cropBtn.addEventListener('click', toggleCrop);
            outlineBtn.addEventListener('click', toggleOutline);
            rotateBtn.addEventListener('click', rotateImage);
            flipHBtn.addEventListener('click', flipHorizontal);
            flipVBtn.addEventListener('click', flipVertical);
            downloadPngBtn.addEventListener('click', () => downloadImage('png'));
            downloadWebpBtn.addEventListener('click', () => downloadImage('webp'));
            savePackBtn.addEventListener('click', saveToStickerPack);
            exportWhatsappBtn.addEventListener('click', exportToWhatsApp);
            exportTelegramBtn.addEventListener('click', exportToTelegram);
            outlineWidthSlider.addEventListener('input', updateOutline);
            outlineColorPicker.addEventListener('input', updateOutline);
            
            // Background suggestion click handlers
            bgSuggestions.querySelectorAll('.bg-suggestion').forEach(suggestion => {
                suggestion.addEventListener('click', function() {
                    // Remove selected class from all
                    bgSuggestions.querySelectorAll('.bg-suggestion').forEach(el => {
                        el.classList.remove('selected');
                    });
                    
                    // Add to clicked one
                    this.classList.add('selected');
                    
                    // Apply background color
                    const color = this.getAttribute('data-color');
                    canvas.setBackgroundColor(color, () => {
                        canvas.renderAll();
                        updatePreview();
                    });
                });
            });
            
            // Size buttons
            document.querySelectorAll('[data-size]').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('[data-size]').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    const size = parseInt(this.getAttribute('data-size'));
                    resizeImage(size);
                });
            });
            
            // Platform buttons
            document.querySelectorAll('[data-platform]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const platform = this.getAttribute('data-platform');
                    applyPlatformPresets(platform);
                });
            });
            
            // Theme buttons
            document.querySelectorAll('[data-theme]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const theme = this.getAttribute('data-theme');
                    updatePreviewTheme(theme);
                });
            });
            
            // Functions
            function handleFileUpload(file) {
                if (!file.type.match('image.*')) {
                    alert('Please select an image file.');
                    return;
                }
                
                showLoading(true, "Loading image...");
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    fabric.Image.fromURL(e.target.result, function(img) {
                        originalImage = img;
                        currentImage = img;
                        
                        // Set canvas dimensions
                        const maxWidth = Math.min(512, img.width);
                        const maxHeight = Math.min(512, img.height);
                        canvas.setDimensions({
                            width: maxWidth,
                            height: maxHeight
                        });
                        
                        // Scale image to fit canvas
                        const scale = Math.min(
                            maxWidth / img.width,
                            maxHeight / img.height
                        );
                        img.scale(scale);
                        
                        canvas.clear();
                        canvas.add(img);
                        canvas.renderAll();
                        
                        // Update preview
                        updatePreview();
                        
                        showLoading(false);
                    });
                };
                reader.readAsDataURL(file);
            }
            
            function showLoading(show, message = "Processing image...") {
                loadingIndicator.style.display = show ? 'flex' : 'none';
                if (show) {
                    loadingIndicator.querySelector('p').textContent = message;
                }
            }
            
            async function removeBackground() {
                if (!currentImage) {
                    alert('Please upload an image first.');
                    return;
                }
                
                if (!net) {
                    alert('Background remover is still loading. Please try again in a moment.');
                    return;
                }
                
                showLoading(true, "Removing background...");
                
                try {
                    // Get image data from canvas
                    const imageData = await getCanvasImageData();
                    
                    // Segment person from background
                    const segmentation = await net.segmentPerson(imageData, {
                        flipHorizontal: false,
                        internalResolution: 'high',
                        segmentationThreshold: 0.7
                    });
                    
                    // Create mask from segmentation
                    const mask = bodyPix.toMask(segmentation);
                    const maskCanvas = document.createElement('canvas');
                    maskCanvas.width = imageData.width;
                    maskCanvas.height = imageData.height;
                    const maskCtx = maskCanvas.getContext('2d');
                    const maskImageData = maskCtx.createImageData(imageData.width, imageData.height);
                    
                    // Apply mask to create transparent background
                    for (let i = 0; i < mask.data.length; i++) {
                        // Only keep pixels where person is detected
                        maskImageData.data[i * 4] = imageData.data[i * 4];         // R
                        maskImageData.data[i * 4 + 1] = imageData.data[i * 4 + 1]; // G
                        maskImageData.data[i * 4 + 2] = imageData.data[i * 4 + 2]; // B
                        maskImageData.data[i * 4 + 3] = mask.data[i] === 1 ? 255 : 0; // A
                    }
                    
                    maskCtx.putImageData(maskImageData, 0, 0);
                    
                    // Convert to fabric image
                    fabric.Image.fromURL(maskCanvas.toDataURL(), function(img) {
                        currentImage = img;
                        canvas.clear();
                        canvas.add(img);
                        canvas.renderAll();
                        updatePreview();
                        showLoading(false);
                    });
                    
                } catch (error) {
                    console.error('Error removing background:', error);
                    alert('Failed to remove background. Please try again.');
                    showLoading(false);
                }
            }
            
            function getCanvasImageData() {
                return new Promise((resolve) => {
                    const tempCanvas = document.createElement('canvas');
                    tempCanvas.width = canvas.width;
                    tempCanvas.height = canvas.height;
                    const tempCtx = tempCanvas.getContext('2d');
                    
                    // Draw canvas to temp canvas
                    tempCtx.drawImage(canvas.getElement(), 0, 0);
                    
                    // Get image data
                    const imageData = tempCtx.getImageData(0, 0, tempCanvas.width, tempCanvas.height);
                    resolve(imageData);
                });
            }
            
            function resetImage() {
                if (originalImage) {
                    canvas.clear();
                    currentImage = originalImage;
                    canvas.add(currentImage);
                    canvas.renderAll();
                    updatePreview();
                    
                    // Reset outline
                    outlineAdded = false;
                    outlineBtn.classList.remove('active');
                    
                    // Reset background
                    canvas.setBackgroundColor(null, () => {
                        canvas.renderAll();
                        updatePreview();
                    });
                    
                    // Reset selected background suggestion
                    bgSuggestions.querySelectorAll('.bg-suggestion').forEach(el => {
                        el.classList.remove('selected');
                    });
                }
            }
            
            function toggleCrop() {
                isCropping = !isCropping;
                cropBtn.classList.toggle('active', isCropping);
                
                if (isCropping) {
                    // Create a cropping rectangle
                    cropRect = new fabric.Rect({
                        left: 50,
                        top: 50,
                        width: 100,
                        height: 100,
                        fill: 'rgba(0, 0, 0, 0.3)',
                        stroke: '#000',
                        strokeWidth: 1,
                        strokeDashArray: [5, 5],
                        transparentCorners: false,
                        cornerColor: '#fff',
                        cornerStrokeColor: '#000',
                        cornerSize: 10,
                        cornerStyle: 'circle',
                        borderColor: '#000',
                        borderScaleFactor: 1.5,
                        hasRotatingPoint: false,
                        selectable: true
                    });
                    
                    canvas.add(cropRect);
                    canvas.setActiveObject(cropRect);
                } else {
                    if (cropRect) {
                        // Apply cropping
                        const cropped = new fabric.Image(currentImage.getElement(), {
                            left: cropRect.left,
                            top: cropRect.top,
                            width: cropRect.width,
                            height: cropRect.height,
                            cropX: cropRect.left - currentImage.left,
                            cropY: cropRect.top - currentImage.top
                        });
                        
                        canvas.remove(cropRect);
                        canvas.clear();
                        canvas.add(cropped);
                        currentImage = cropped;
                        canvas.renderAll();
                        updatePreview();
                        
                        cropRect = null;
                    }
                }
            }
            
            function toggleOutline() {
                outlineAdded = !outlineAdded;
                outlineBtn.classList.toggle('active', outlineAdded);
                
                if (outlineAdded) {
                    addOutline();
                } else {
                    // Remove outline by resetting the image
                    if (currentImage) {
                        canvas.clear();
                        canvas.add(currentImage);
                        canvas.renderAll();
                        updatePreview();
                    }
                }
            }
            
            function addOutline() {
                if (!currentImage) return;
                
                const outlineWidth = parseInt(outlineWidthSlider.value);
                const outlineColor = outlineColorPicker.value;
                
                // Create a copy of the current image
                const imgWithOutline = new fabric.Image(currentImage.getElement());
                
                // Apply outline effect
                imgWithOutline.set({
                    shadow: new fabric.Shadow({
                        color: outlineColor,
                        blur: 0,
                        offsetX: 0,
                        offsetY: 0,
                        affectStroke: true
                    }),
                    stroke: outlineColor,
                    strokeWidth: outlineWidth
                });
                
                canvas.clear();
                canvas.add(imgWithOutline);
                canvas.renderAll();
                updatePreview();
            }
            
            function updateOutline() {
                if (outlineAdded) {
                    outlineWidthValue.textContent = outlineWidthSlider.value;
                    addOutline();
                }
            }
            
            function rotateImage() {
                if (currentImage) {
                    currentImage.angle = (currentImage.angle || 0) + 90;
                    currentImage.setCoords();
                    canvas.renderAll();
                    updatePreview();
                }
            }
            
            function flipHorizontal() {
                if (currentImage) {
                    currentImage.flipX = !currentImage.flipX;
                    canvas.renderAll();
                    updatePreview();
                }
            }
            
            function flipVertical() {
                if (currentImage) {
                    currentImage.flipY = !currentImage.flipY;
                    canvas.renderAll();
                    updatePreview();
                }
            }
            
            function resizeImage(size) {
                if (!currentImage) return;
                
                const scale = size / Math.max(currentImage.width, currentImage.height);
                currentImage.scale(scale);
                canvas.setDimensions({
                    width: size,
                    height: size
                });
                canvas.renderAll();
                updatePreview();
            }
            
            function applyPlatformPresets(platform) {
                if (!currentImage) return;
                
                switch (platform) {
                    case 'whatsapp':
                        resizeImage(512);
                        break;
                    case 'telegram':
                        resizeImage(512);
                        break;
                    case 'instagram':
                        resizeImage(256);
                        break;
                }
            }
            
            function updatePreview() {
                if (!currentImage) return;
                
                const dataURL = canvas.toDataURL({
                    format: 'png',
                    quality: 1
                });
                
                previewSticker.src = dataURL;
                previewSticker.style.display = 'block';
            }
            
            function updatePreviewTheme(theme) {
                const previewContainer = document.getElementById('whatsapp-preview');
                
                switch (theme) {
                    case 'whatsapp':
                        previewContainer.style.backgroundColor = '#e5f7ed';
                        break;
                    case 'telegram':
                        previewContainer.style.backgroundColor = '#e3f2fd';
                        break;
                    case 'instagram':
                        previewContainer.style.background = 'linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888)';
                        break;
                    case 'dark':
                        previewContainer.style.backgroundColor = '#333';
                        break;
                    case 'light':
                        previewContainer.style.backgroundColor = '#fff';
                        break;
                }
            }
            
            function downloadImage(format) {
                if (!currentImage) {
                    alert('Please upload and edit an image first.');
                    return;
                }
                
                let mimeType, extension;
                if (format === 'png') {
                    mimeType = 'image/png';
                    extension = 'png';
                } else {
                    mimeType = 'image/webp';
                    extension = 'webp';
                }
                
                const dataURL = canvas.toDataURL({
                    format: format,
                    quality: 0.92
                });
                
                const link = document.createElement('a');
                link.download = `sticker.${extension}`;
                link.href = dataURL;
                link.click();
            }
            
            function saveToStickerPack() {
                alert('Sticker pack functionality would be implemented here.\nIn a real app, this would save to a local sticker pack collection.');
            }
            
            function exportToWhatsApp() {
                alert('WhatsApp export functionality would be implemented here.\nIn a real app, this would use the WhatsApp Stickers API.');
            }
            
            function exportToTelegram() {
                alert('Telegram export functionality would be implemented here.\nIn a real app, this would use the Telegram Stickers API.');
            }
        });
    </script>
</body>
</html>
